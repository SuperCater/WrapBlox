{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "off"
			}
		}
	},

	"json": {
		"parser": {
			"allowComments": true
		}
	},

	"formatter": {
		"enabled": true,

		"indentStyle": "space",
    	"indentWidth": 2,
    	"lineWidth": 120,

		"formatWithErrors": true
	},

	"organizeImports": {
		"enabled": true
	}
}
